				<form:content>
	<Label text="Id Persona" labelFor="IdPersona"/>
		<Input id="IdPersona" type="Text" value=""/>					
	<Label text="Password" labelFor="TuPassword"/>
		<Input id="TuPassword" type="Text" value=""/>					
	
	
	
				</form:content>
			</form:SimpleForm>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<Label text="Offline"/>
				<Switch state="false">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Switch>
				<ToolbarSpacer/>
						<Button  id="DetailPerson" text="DetailPerson" press="DetailPerson"/>
						<Button  id="ShowPassword" text="ShowPassword" press="ShowPassword"/>
						<Button  id="GoTerceraVista" text="GoTerceraVista" press="GoTerceraVista"/>
